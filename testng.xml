<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<!-- Run CheckboxTests and RadioButtonTests classes in parallel-->
<suite name="All Test Suite" parallel="classes" thread-count="2">
    <test name="CheckBoxTests">
        <classes>
            <class name="CheckboxTests">
                <methods>
                    <include name="uncheck"/>
                    <include name="check"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="RadioButtonTests">
        <classes>
            <class name="RadioButtonTests">
                <methods>
                    <include name="selectYes"/>
                    <exclude name="selectNo"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>